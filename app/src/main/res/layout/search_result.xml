<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_result_img"
            android:src="@drawable/head_small"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="20dp"
            android:id="@+id/search_result_name" android:layout_alignTop="@+id/search_result_img"
            android:layout_toEndOf="@+id/search_result_img"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年11月22日"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/search_result_day" android:layout_alignTop="@+id/search_result_name"
            android:layout_toEndOf="@+id/search_result_name" android:layout_marginStart="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/4"
            android:textSize="20dp"
            android:id="@+id/textView" android:layout_alignTop="@+id/search_result_name"
            android:layout_toEndOf="@+id/search_result_day" android:layout_marginStart="20dp"/>
</RelativeLayout>